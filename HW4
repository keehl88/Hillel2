function isSimple(number) {
  if (number <= 1) {
    return false; 
  }
  for (let i = 2; i <= number / 2; i++) {
    if (number % i === 0) {
      return false; 
    }
  }
  return true; 
}

const input = 18; // тут можно вставити число для перевірки

if (isSimple(input)) {
  console.log(`Число ${input} є простим числом.`);
} else {
  console.log(`Число ${input} не є простим числом.`);
}
